clc
clear
close all
%%%%%
%%%%%   audiorecording and saving


time=5; % length of audiorecording in seconds
recObj = audiorecorder;
disp('Begin Recording')
recordblocking(recObj, time);
disp('End of Recording.');
recording=getaudiodata(recObj);


%%%%%
%%%%%   Coupled Differential Equation Solver
nstep = 100;
dt    = .99;
y0    = .1*ones(6,1);
t     = 0:dt:(nstep*dt);
Y     = zeros(6,nstep);
Y(:,1)= y0;
f     = @derivs;
s     = @(t) 2*t;
for i=2:nstep+1
      Y(:,i)=rk4step(Y(:,i-1),f,t(i-1),dt,s);
end

x = Y(1,:);
y = Y(2,:);
z = Y(3,:);
u = Y(4,:);
v = Y(5,:);
w = Y(6,:);

deltaUX = abs(u-x);
deltaVY = abs(v-y);
deltaWZ = abs(w-z);


hold all
plot(t,deltaUX,'r')
plot(t,deltaVY,'g')
plot(t,deltaWZ,'b')

